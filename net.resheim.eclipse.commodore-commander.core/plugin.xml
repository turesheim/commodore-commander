<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         id="kickassemblerBuilder"
         name="Kick Assembler Project Builder"
         point="org.eclipse.core.resources.builders">
      <builder
            hasNature="true">
         <run
               class="net.resheim.eclipse.cc.builder.KickAssemblerBuilder">
         </run>
      </builder>
   </extension>
   <extension
         id="nature"
         name="Commodore Commander Project Nature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="net.resheim.eclipse.cc.builder.CommodoreCommanderNature">
         </run>
      </runtime>
      <builder
            id="net.resheim.eclipse.commodore-commander.core.kickassemblerBuilder">
      </builder>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="net.resheim.eclipse.commodore-commander.core.nature.category"
            name="Commodore Commander Project Nature commands">
      </category>
      <command
            categoryId="net.resheim.eclipse.commodore-commander.core.nature.category"
            defaultHandler="net.resheim.eclipse.cc.core.AddRemoveNatureHandler"
            id="net.resheim.eclipse.commodore-commander.core.addRemoveNature"
            name="Add/Remove Commodore Commander Project Nature">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.ui.projectConfigure?after=additions">
         <command
               commandId="net.resheim.eclipse.commodore-commander.core.addRemoveNature"
               label="Disable Commodore Commander Project"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <count
                        value="1">
                  </count>
                  <iterate>
                     <adapt
                           type="org.eclipse.core.resources.IProject">
                        <test
                              property="org.eclipse.core.resources.projectNature"
                              value="net.resheim.eclipse.commdore-commander.core.nature">
                        </test>
                     </adapt>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
         <command
               commandId="net.resheim.eclipse.commodore-commander.core.addRemoveNature"
               label="Convert to Commodore Commander Project"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <count
                        value="1">
                  </count>
                  <iterate>
                     <adapt
                           type="org.eclipse.core.resources.IProject">
                        <not>
                           <test
                                 property="org.eclipse.core.resources.projectNature"
                                 value="net.resheim.eclipse.commdore-commander.core.nature">
                           </test>
                        </not>
                     </adapt>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         id="xmlProblem"
         name="XML Problem"
         point="org.eclipse.core.resources.markers">
      <super
            type="org.eclipse.core.resources.problemmarker">
      </super>
      <persistent
            value="true">
      </persistent>
   </extension>

</plugin>
