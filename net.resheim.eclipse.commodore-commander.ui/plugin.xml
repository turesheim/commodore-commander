<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
  <extension
    point="org.eclipse.core.contenttype.contentTypes">
    <content-type
      file-extensions="asm,inc,s,a,lib,kick,ka,src"
      id="net.resheim.eclipse.commodore-commander.kickassembler"
      name="Kick Assembler Code"
      priority="normal">
    </content-type>
  </extension>

  <!-- Register Kick Assembler TextMate grammars -->
  <extension
    point="org.eclipse.tm4e.registry.grammars">
    <grammar
      scopeName="source.assembly.kickassembler"
      path="syntaxes/kickassembler.tmLanguage.json">
    </grammar>
    <scopeNameContentTypeBinding
      contentTypeId="net.resheim.eclipse.commodore-commander.kickassembler"
      scopeName="source.assembly.kickassembler">
    </scopeNameContentTypeBinding>
  </extension>

  <extension point="org.eclipse.tm4e.languageconfiguration.languageConfigurations">
    <languageConfiguration contentTypeId="net.resheim.eclipse.commodore-commander.kickassembler" path="syntaxes/kickassembler.language-configuration.json" />
  </extension>

  <!-- Assembly Editor uses TextMate presentation reconcilier -->
  <extension
    point="org.eclipse.ui.genericeditor.presentationReconcilers">
    <presentationReconciler
      class="org.eclipse.tm4e.ui.text.TMPresentationReconciler"
      contentType="net.resheim.eclipse.commodore-commander.kickassembler">
    </presentationReconciler>
  </extension>

  <!-- Assembly Editor -->
  <extension point="org.eclipse.ui.editors">
    <editorContentTypeBinding editorId="net.resheim.eclipse.commodore-commander.kickassembler.editor" 
    contentTypeId="net.resheim.eclipse.commodore-commander.kickassembler" />
    <editor
          class="net.resheim.eclipse.kickassembler.editor.KickAssemblerEditor"
          default="true"
          icon="icons/asm_file_obj.png"
          id="net.resheim.eclipse.commodore-commander.kickassembler.editor"
          name="C64 Assembler">
    </editor>
  </extension>
  <extension
        point="org.eclipse.tm4e.ui.snippets">
     <snippet
           name="Kick Assembler"
           path="snippet.asm"
           scopeName="source.assembly.kickassembler">
     </snippet>
  </extension>

</plugin>
