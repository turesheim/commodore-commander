<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
  <extension
    point="org.eclipse.core.contenttype.contentTypes">
    <content-type
      file-extensions="asm,inc,s,a,lib,kick,ka,src"
      id="net.resheim.eclipse.commodore-commander.kickassembler"
      name="Kick Assembler Code"
      priority="high">
    </content-type>
  </extension>

  <!-- Register Kick Assembler TextMate grammars -->

  <extension point="org.eclipse.tm4e.languageconfiguration.languageConfigurations">
    <languageConfiguration contentTypeId="net.resheim.eclipse.commodore-commander.kickassembler" path="syntaxes/kickassembler.language-configuration.json" />
  </extension>
  <extension
    point="org.eclipse.tm4e.registry.grammars">
    <grammar
      scopeName="source.assembly.kickassembler"
      path="syntaxes/kickassembler.tmLanguage.json">
    </grammar>
    <scopeNameContentTypeBinding
      contentTypeId="net.resheim.eclipse.commodore-commander.kickassembler"
      scopeName="source.assembly.kickassembler">
    </scopeNameContentTypeBinding>
  </extension>
  <extension
    point="org.eclipse.ui.genericeditor.presentationReconcilers">
    <presentationReconciler
      class="org.eclipse.tm4e.ui.text.TMPresentationReconciler"
      contentType="net.resheim.eclipse.commodore-commander.kickassembler">
    </presentationReconciler>
  </extension>
  <extension point="org.eclipse.ui.editors">
    <editor
          class="net.resheim.eclipse.cc.editor.KickAssemblerEditor"
          default="true"
          icon="icons/asm_file_obj.png"
          id="net.resheim.eclipse.commodore-commander.ui.kickassembler.editor"
          name="C64 Assembler">
    </editor>
    <editorContentTypeBinding editorId="net.resheim.eclipse.commodore-commander.ui.kickassembler.editor" 
    contentTypeId="net.resheim.eclipse.commodore-commander.kickassembler" />
  </extension>
  <extension
        point="org.eclipse.tm4e.ui.snippets">
     <snippet
           name="Kick Assembler"
           path="snippet.asm"
           scopeName="source.assembly.kickassembler">
     </snippet>
  </extension>

   <extension
         id="kickassemblerBuilder"
         name="Kick Assembler Project Builder"
         point="org.eclipse.core.resources.builders">
      <builder
            hasNature="true">
         <run
               class="net.resheim.eclipse.cc.builder.KickAssemblerBuilder">
         </run>
      </builder>
   </extension>
   <extension
         id="nature"
         name="Commodore Commander Project Nature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="net.resheim.eclipse.cc.nature.CommodoreCommanderNature">
         </run>
      </runtime>
      <builder
            id="net.resheim.eclipse.commodore-commander.ui.kickassemblerBuilder">
      </builder>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="net.resheim.eclipse.commodore-commander.nature.category"
            name="Commodore Commander Project Nature commands">
      </category>
      <command
            categoryId="net.resheim.eclipse.commodore-commander.nature.category"
            defaultHandler="net.resheim.eclipse.cc.nature.AddRemoveNatureHandler"
            id="net.resheim.eclipse.commodore.commander.toggleProjectNature"
            name="Add/Remove Commodore Commander Project Nature">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.ui.projectConfigure?after=additions">
         <command
               commandId="net.resheim.eclipse.commodore.commander.toggleProjectNature"
               label="Disable Commodore Commander Project"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <count
                        value="1">
                  </count>
                  <iterate>
                     <adapt
                           type="org.eclipse.core.resources.IProject">
                        <test
                              property="org.eclipse.core.resources.projectNature"
                              value="net.resheim.eclipse.commodore-commander.ui.nature">
                        </test>
                     </adapt>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
         <command
               commandId="net.resheim.eclipse.commodore.commander.toggleProjectNature"
               label="Convert to Commodore Commander Project"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <count
                        value="1">
                  </count>
                  <iterate>
                     <adapt
                           type="org.eclipse.core.resources.IProject">
                        <not>
                           <test
                                 property="org.eclipse.core.resources.projectNature"
                                 value="net.resheim.eclipse.commodore-commander.ui.nature">
                           </test>
                        </not>
                     </adapt>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         id="kickAssemblerProblem"
         name="Kick Assembler Problem"
         point="org.eclipse.core.resources.markers">
      <super
            type="org.eclipse.core.resources.problemmarker">
      </super>
      <super type="org.eclipse.core.resources.textmarker"/> 
      <persistent
            value="false">
      </persistent>
   </extension>

</plugin>
